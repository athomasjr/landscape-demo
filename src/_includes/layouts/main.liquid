<!DOCTYPE html>
<html class="scroll-smooth" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		{% if title %}
		<title>{{ site.title }} - {{ title }}</title>
		{% else %}
		<title>{{ site.title }}</title>
		{% endif %} {% if description %}
		<meta name="description" content="{{ description }}" />
		{% endif %}

		<link rel="stylesheet" href="styles/global.css?v={% version %}" />
		<script src="/js/alpine.js?v={% version %}"></script>
	</head>
	<body class="bg-background-white relative">
		<div class="flex flex-col min-h-screen" id="content">
			{% include 'components/header' %} {% block content %}{{
				content
			}}{%endblock %} {% include 'components/footer' %}
		</div>
	</body>
</html>
